div class="card"
  div class="px-3"
    div class="card-block px-6"
      h4 class="card-title" Пользователь: #{user.profile.name}
      br
      h5 адрес электронной почты: #{user.email}
      h5 статус: #{user.profile.role}
      - if user.profile.role == 'user'
        h5 периодичность рассылки: #{user.profile.mailing_period}
      h5 зарегистрирован: #{user.created_at}
      br
      = link_to 'Изменить', edit_user_path(user), class: "btn btn-primary"
      = link_to 'Удалить', user_path(user), data: {"turbo-method": :delete, 'turbo-confirm': 'Вы уверены?'}, class: "btn btn-primary mx-2"